<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="styles/map.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
  <title>Show Rides</title>
</head>

<body>

  <h1>Ride Share
  </h1>
<div class="top">
  <div class="container1">
    <form class="form-horizontal">
      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1"><i class="far fa-dot-circle"></i></span>
        <input type="text" class="form-control" id="from" placeholder="From">
        <button type="button" class="btn btn-light" onClick="getLocation('from');"><i class="fas fa-location-arrow"></i></button>
      </div>
  
      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1"><i class="fas fa-map-marker-alt"></i></span>
        <input type="text" id="to" class="form-control" placeholder="To">
        <button type="button" class="btn btn-light" onClick="getLocation('to');"><i class="fas fa-location-arrow"></i></button>
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1"><i class="fas fa-users"></i></span>
        <input type="text" id="NumberOfPeople" class="form-control" placeholder="Number Of Passengers">
      </div>
      <button type="button" class="btn btn-dark" onClick="calcRoute();"> Find</button>
        
    </form>

    <p id="info"></p>
  </div>
  <div class="container2">        
    <div id="googleMap">
    </div>
    <div id="output">
    </div>
  </div>
</div>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBnoR42T2Mlxti728TT6tx04NqSwwMgsik&libraries=places"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
          crossorigin="anonymous"></script>
  <script src="scripts/map.js"></script> 
</body>

</html>